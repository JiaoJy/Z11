@model Z11.Models.UserInfo
@{
    ViewBag.Title = "个人信息编辑";
    //String[] abilities = Model.skill.Split(',');
    //String[] avalue = Model.skillvalue.Split(',');

}
<style>
    .con{
        margin-top:2%;
    }
</style>
<div class="container">
    <div class="row clearfix con">
        <div class="col-md-1 column"></div>
        <div class="col-md-9 column">
            <!--  //-->
            
            <form class="form-horizontal text-primary" id="myform" action="@Url.Action("EditSubmit","Home")" method="post" enctype="multipart/form-data">
                <div class="userimage form-group"> 
                    <label class="col-sm-2 control-label"> &nbsp;</label>
                    <div class="col-sm-3">
                        <p>
                            <!-- 这里定义图片为响应式，并且添加圆角效果，以便保证图片在不同设备上都可以完美显示 //-->
                            <img data-toggle="tooltip" data-placement="left" id="avatar" title="" class="img-responsive img-rounded" src="@Model.imgUrl" alt="" data-original-title="我是Terry">
                        </p>
                        <p><input type="file" name="fileup" /></p>
                    </div>

                </div>
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">姓名</label>
                    <div class="col-sm-10">
                        <input value="@Model.name" name="name"  class="form-control" id="inputEmail3" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="job" class="col-sm-2 control-label">职位</label>
                    <div class="col-sm-10">
                        <input value="@Model.job" name="job" type="text" class="form-control" id="inputPassword3" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">邮箱</label>
                    <div class="col-sm-10">
                        <input value="@Model.email" name="email" type="email" class="form-control" id="inputEmail3" />
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-sm-2 control-label">电话</label>
                    <div class="col-sm-10">
                        <input value="@Model.telPhone" name="phone" type="text" class="form-control" id="inputPassword3" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="address" class="col-sm-2 control-label">住址</label>
                    <div class="col-sm-10">
                        <input value="@Model.address" name="address" type="text" class="form-control" id="inputEmail3" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="hobies" class="col-sm-2 control-label">爱好</label>
                    <div class="col-sm-10">
                        <input value="@Model.hobies" name="hobies" type="text" class="form-control" id="inputPassword3" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="skill" class="col-sm-2 control-label">技术</label>
                    <div class="col-sm-10">
                        <input value="@Model.skill" name="skill" type="text" class="form-control" id="inputPassword3" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="introduction" class="col-sm-2 control-label">个人简介</label>
                    <div class="col-sm-10">
                        <textarea name="introduction" class="form-control" rows="6">
                            @Model.introduction
                        </textarea>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-12">
                        <button  id ="save" class="btn btn-default">保存</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2 column"></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#save").click(function () {
            //alert(skill + "," + skillvalue);
            $("#myform").submit();
        })
    });
</script>