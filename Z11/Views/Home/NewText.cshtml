@model Z11.Models.uId
@{ 
    int sid = Model.id;
}

<script src="~/Scripts/ckeditor/ckeditor.js"></script>

<script src="~/Scripts/ckeditor/config.js"></script>
<div class="form-horizontal">
    <hr />
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-8 column">
                <form class="form-horizontal" role="form" id="myform" action="@Url.Action("NewTextSubmit","Home",new { id = Model.id})" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">题目</label>
                        <div class="col-sm-10">
                            <input type="text" value="" name="title" class="form-control" id="inputEmail3" placeholder="题目"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="content" class="col-sm-2 control-label">内容</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(model=>Model.content, new { @class = "ckeditor", @name = "content" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">保存</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-4 column">
            </div>
        </div>
    </div>
</div>
<div>
    @Ajax.ActionLink("返回", "MyInfo1", "Home", null, null, null)
</div>