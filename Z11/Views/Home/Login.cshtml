
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>登录</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="//cdn.bootcss.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/Content/semantic/jquery.min.js"></script>
    <script src="~/Content/js/boostrap.min.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="js/message.js"></script>
    <style type="text/css">
        body {
            background: url(../../files/imgs/loginBackground.jpg) no-repeat;
            background-size:auto;
            font-size: 16px;
        }

        .form {
            background: rgba(164, 161, 161, 0.60);
            width: 40%;
            height:auto;
            margin: 100px auto;
            border-radius:10px;
        }

        #login_form {
            display: block;
        }

        #register_form {
            display: none;
        }

        .fa {
            display: inline-block;
            top: 27px;
            left: 6px;
            position: relative;
            color: #ccc;
        }

        input[type="text"], input[type="password"] {
            padding-left: 26px;
        }

        .checkbox {
            padding-left: 21px;
        }
        .form-title{
            color:antiquewhite;
        }
    </style>
</head>
<body>
   
    <div class="container">
         <h2 class="col-md-4  navbar-text text-right">@Html.ActionLink("首页展示", "PreMain", "Home", new { area = "" }, new { @class = "navbar-brand" , style = "color:white;" })</h2>
        <div class="form row">
          
            <form class="form-horizontal col-sm-offset-3 col-md-offset-3" id="login_form" action="@Url.Action("getLoginInfo","Home")" method="post">
                <h3 class="form-title">后台管理系统</h3>              
                <div class="col-sm-9 col-md-9">
                    <div class="form-group">
                        <i class="fa fa-user fa-lg"></i>
                        <input class="form-control required" type="text" placeholder="Username" name="username" autofocus="autofocus" maxlength="20" />
                    </div>
                    <div class="form-group">
                        <i class="fa fa-lock fa-lg"></i>
                        <input class="form-control required" type="password" placeholder="Password" name="password" maxlength="8" />
                    </div>
                    <div class="form-group">
                        @*<label class="checkbox">
                            <input type="checkbox" name="remember" value="1" /> Remember me
                        </label>*@
                        <hr />
                        <input type="submit" class="btn btn-info pull-right" value="登录" />
                        <a href="javascript:;" id="register_btn" class="btn" style="color:white;">注册</a>
                    </div>
                    @*<div class="form-group">
                        <input type="submit" class="btn btn-success pull-right" value="Login " />
                    </div>*@
                </div>
            </form>
        </div>

        <div class="form row" style="margin-top:-10%;">
            <form class="form-horizontal col-sm-offset-3 col-md-offset-3" id="register_form"  action="@Url.Action("getRegisterInfo","Home")" method="post">
                <h3 class="form-title">注册账户</h3>
                <div class="col-sm-9 col-md-9">
                    <div class="form-group">
                        <i class="fa fa-user fa-lg"></i>
                        <input class="form-control required" type="text" placeholder="Username" name="username" autofocus="autofocus" />
                    </div>
                    <div class="form-group">
                        <i class="fa fa-lock fa-lg"></i>
                        <input class="form-control required" type="password" placeholder="Password" id="register_password" name="password" />
                    </div>
                    <div class="form-group">
                        <i class="fa fa-check fa-lg"></i>
                        <input class="form-control required" type="password" placeholder="Re-type Your Password" name="rpassword" />
                    </div>
                    <div class="form-group">
                        <i class="fa fa-envelope fa-lg"></i>
                        <input class="form-control eamil" type="text" placeholder="Email" name="email" />
                    </div>
                    <div class="form-group" style="padding-top:8%; padding-bottom:5%;">
                        <input type="submit" class="btn btn-success pull-right" value="提交 " />
                        <input type="submit" class="btn btn-info pull-left" id="back_btn" value="返回" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="~/Content/js/main.js"></script>
</body>
</html>


