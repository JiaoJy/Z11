
@{
    Layout = null;
    ViewBag.Title = "注册成功";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>bootstrap案例</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    
    <script src="~/Content/semantic/jquery.min.js"></script>
   
</head>
<body>
  
    <div class="container">
        <div class="jumbotron">
            <h1>注册成功!</h1>
            <p><span id="second">5</span>秒后自动跳转到登录界面，或直接点击下方按钮</p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button" id="login">去登录</a></p>
        </div>
    </div>
    <script>
		$(document).ready(function () {
			var count = 5;
			var si = setInterval(function(){
				count = count-1;
				$("#second").html(count);
				if(count==0){stopsi();};
			},1000)

			function stopsi(){
			    clearInterval(si);
			    window.location.href = "/Home/Login/";
			}

			$("#login").click(function () {
			    window.location.href = "/Home/Login/";
			})
		});
    </script>
</body>
</html>

